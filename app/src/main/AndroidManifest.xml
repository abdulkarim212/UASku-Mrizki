<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.mrizki.biodata">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/icon_biodata"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.example.mrizki.biodata.MainActivity"
                android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        </activity>
        <activity
                android:name="com.example.mrizki.biodata.presenter.RegisterActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity android:name="com.example.mrizki.biodata.presenter.ForgotPasswordActivity">
        </activity>
        <activity android:name="com.example.mrizki.biodata.view.Form">
        </activity>
        <activity android:name="com.example.mrizki.biodata.SplashScreen"
                  android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mrizki.biodata.presenter.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        </activity>
        <activity android:name="com.example.mrizki.biodata.view.viewPager.IntroActivity">
        </activity>
    </application>

</manifest>